    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Codeordre</th>
                <th>Nom</th>
                <th>Priorite</th>
                <th>Client</th>
                <th>Commandeclient</th>
                <th>Etat</th>
                <th>Creepar</th>
                <th>Datecreation</th>
                <th>actions</th>
            </tr>
