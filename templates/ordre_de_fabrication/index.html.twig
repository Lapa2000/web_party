                <td>{{ ordre_de_fabrication.codeordre }}</td>
                <td>{{ ordre_de_fabrication.nom }}</td>
                <td>{{ ordre_de_fabrication.priorite }}</td>
                <td>{{ ordre_de_fabrication.client }}</td>
                <td>{{ ordre_de_fabrication.commandeclient }}</td>
                <td>{{ ordre_de_fabrication.etat }}</td>
